<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_sale_order_alert_wizard" model="ir.ui.view">
            <field name="name">sale.order.alert.wizard.form</field>
            <field name="model">sale.order.alert.wizard</field>
            <field name="arch" type="xml">
                <form string="Enviar alerta" create="0" edit="0">
                    <group>
                        <field name="alert_type"/>
                        <field name="message" widget="text"/>
                    </group>
                    <footer>
                        <button string="Enviar"
                                type="object"
                                name="action_send_alert"
                                class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_order_alert_wizard" model="ir.actions.act_window">
            <field name="name">Enviar alerta</field>
            <field name="res_model">sale.order.alert.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
