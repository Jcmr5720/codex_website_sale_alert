<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_form_inform_button" model="ir.ui.view">
            <field name="name">sale.order.form.inform.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <t t-if="record.alert_sent_type_ids">
                        <t t-foreach="record.alert_sent_type_ids.split(',')" t-as="alert_key">
                            <span t-if="alert_key"
                                  class="badge badge-info o_sale_alert_badge me-1">
                                <t t-esc="record._get_alert_label(alert_key)"/>
                            </span>
                        </t>
                    </t>
                    <button name="%(action_sale_order_alert_wizard)d"
                            type="action"
                            string="Informar"
                            class="btn-primary"
                            context="{'default_order_id': active_id, 'active_id': active_id, 'active_model': 'sale.order'}"
                            attrs="{'invisible': [('invoice_status', '!=', 'invoiced')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
